#include <Adafruit_CircuitPlayground.h>

int value;

void setup() {
  Serial.begin(9600);
  CircuitPlayground.begin();
  
}

void loop() {
  value = CircuitPlayground.lightSensor();
  
  Serial.print("Light Sensor: ");
  Serial.println(value);


  if ( value < 100)
      CircuitPlayground.setPixelColor(0, 255, 255,   0);   
  else
    CircuitPlayground.clearPixels();
     if ( value < 100)
      CircuitPlayground.setPixelColor(1, 245, 245, 220);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(2, 255, 255,   0);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(3, 245, 245, 220);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(4, 255, 255,   0);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(5, 245, 245, 220);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(6, 255, 255,   0);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(7, 245, 245, 220);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(8, 255, 255,   0);   
  else
    CircuitPlayground.clearPixels();

    if ( value < 100)
      CircuitPlayground.setPixelColor(9, 245, 245, 220);   
  else
    CircuitPlayground.clearPixels();


   
}
